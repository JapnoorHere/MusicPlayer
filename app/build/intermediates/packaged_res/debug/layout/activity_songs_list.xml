<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/activity_songs_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".SongsListActivity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="All Songs"
                    android:textSize="30sp"
                    android:textStyle="bold" />

<!--                <EditText-->
<!--                    android:drawablePadding="20dp"-->
<!--                    android:id="@+id/etSearch"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="20dp"-->
<!--                    android:layout_marginEnd="20dp"-->
<!--                    android:background="@drawable/search_bg"-->
<!--                    android:drawableStart="@drawable/search"-->
<!--                    android:hint="SEARCH"-->
<!--                    android:padding="10dp" />-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                >
                <EditText
                    android:background="#E4E4E4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchView"
                    android:hint="Search Songs, Artists"
                    android:padding="13dp"
                    android:drawableStart="@drawable/search"
                    android:drawablePadding="20dp"
                    />
            </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/song_item" />

            </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nowPlaying"
            android:name="com.droidbytes.musicplayer.NowPlayingMusic"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            tools:layout="@layout/fragment_now_playing_music" />

    </RelativeLayout>
         